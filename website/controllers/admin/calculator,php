<?php
class ControllerAdminCalculator extends MVC{
	public function setting(){
		$admin = $this->isAdmin();
		if(empty($admin['name'])) return false;

		$calculator = new Action(MODEL,'modules/calculator');

		$data['setting'] = $calculator->loader('getSetting');

		return $this->render(THEME_NAME . '/template/admin/calculator/setting.tpl', $data);
	}

	public function addJobs(){
		$admin = $this->isAdmin();
		if(empty($admin['name'])) return false;

		$calculator = new Action(MODEL,'modules/calculator');

		return $this->render(THEME_NAME . '/template/admin/calculator/addJobs.tpl');
	}

	public function addPositions(){
		$admin = $this->isAdmin();
		if(empty($admin['name'])) return false;

		$calculator = new Action(MODEL,'modules/calculator');

		$data['jobs'] = $calculator->loader('getJobs');

		return $this->render(THEME_NAME . '/template/admin/calculator/addPositions.tpl', $data);
	}

	public function viewJobs(){
		$admin = $this->isAdmin();
		if(empty($admin['name'])) return false;

		$calculator = new Action(MODEL,'modules/calculator');

		$data['jobs'] = $jobs = $calculator->loader('getJobs');

		return $this->render(THEME_NAME . '/template/admin/calculator/viewJobs.tpl', $data);
	}

	public function viewPositions(){
		$admin = $this->isAdmin();
		if(empty($admin['name'])) return false;

		$calculator = new Action(MODEL,'modules/calculator');

		$data['positions'] = $positions = $calculator->loader('getPositions');

		return $this->render(THEME_NAME . '/template/admin/calculator/viewPositions.tpl', $data);
	}
}
?>